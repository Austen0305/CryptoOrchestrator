{
  "_comment": "Cursor IDE Optimized Settings - Based on official Cursor documentation (December 2025)",
  
  "editor": {
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "boundary",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  
  // File Management
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  
  // Cursor AI Agent Settings
  "cursor.completion.enabled": true,
  "cursor.completion.model": "default",
  "cursor.contextLimit": "enhanced",
  "cursor.showInlineCompletions": true,
  "cursor.rateLimit": {
    "enabled": false
  },
  
  // Chat Agent Settings
  "chat.agent.maxRequests": 150,
  
  // YOLO Mode - Allow agent to execute certain commands automatically
  "cursor.yoloMode": {
    "allowedCommands": [
      "test",
      "vitest",
      "npm test",
      "nr test",
      "build",
      "tsc",
      "touch",
      "mkdir"
    ],
    "allowedFileOperations": [
      "create",
      "delete",
      "modify"
    ]
  },
  
  // TypeScript Settings
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  
  // Python Settings
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.analysis.typeCheckingMode": "strict",
  
  // JSON Settings
  "json.schemas": [
    {
      "fileMatch": ["**/.cursor/rules/*.mdc"],
      "schema": {
        "type": "object",
        "properties": {
          "alwaysApply": { "type": "boolean" },
          "description": { "type": "string" },
          "globs": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  ],
  
  // Search Settings
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/__pycache__": true,
    "**/coverage": true,
    "**/test-results": true
  },
  
  // Performance Optimizations - Critical for large projects
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/dist-electron/**": true,
    "**/build/**": true,
    "**/__pycache__/**": true,
    "**/coverage/**": true,
    "**/test-results/**": true,
    "**/playwright-report/**": true,
    "**/playwright/.cache/**": true,
    "**/.pytest_cache/**": true,
    "**/htmlcov/**": true,
    "**/logs/**": true,
    "**/.cache/**": true,
    "**/.turbo/**": true,
    "**/.vercel/**": true,
    "**/venv/**": true,
    "**/.venv/**": true,
    "**/env/**": true,
    "**/ENV/**": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/desktop.ini": true
  },
  
  // Extension Settings
  "extensions.ignoreRecommendations": false,
  
  // Terminal Settings
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 14,
  
  // Git Settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true
}
