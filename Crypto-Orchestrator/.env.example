# CryptoOrchestrator Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ==========================================
# Application Settings
# ==========================================
NODE_ENV=development
PORT=8000
API_BASE_URL=http://localhost:8000
WS_BASE_URL=ws://localhost:8000

# ==========================================
# Database Configuration
# ==========================================
# PostgreSQL (production): postgresql+asyncpg://user:password@host:port/database
# SQLite (development): sqlite+aiosqlite:///./crypto_orchestrator.db
DATABASE_URL=sqlite+aiosqlite:///./crypto_orchestrator.db

# ==========================================
# Redis Configuration (Optional but recommended)
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_ENABLED=true

# ==========================================
# Authentication & Security
# ==========================================
# âš ï¸ CHANGE THESE IN PRODUCTION! Must be at least 32 characters, randomly generated
JWT_SECRET=your-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=15
JWT_REFRESH_EXPIRATION_DAYS=7
EXCHANGE_KEY_ENCRYPTION_KEY=your-encryption-key-change-in-production-minimum-32-chars

# ==========================================
# CORS Configuration
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100
RATE_LIMIT_ENABLED=true

# ==========================================
# Performance Settings
# ==========================================
PERF_WORKERS=4
PERF_MAX_CONNECTIONS=1000
PERF_DB_POOL_SIZE=20
PERF_DB_MAX_OVERFLOW=10
PERF_CACHE_TTL=300

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_FILE=logs/fastapi.log

# ==========================================
# Monitoring & Observability
# ==========================================
ENABLE_PROMETHEUS=true
ENABLE_SENTRY=false
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ==========================================
# Exchange API Keys (Optional - for real trading)
# ==========================================
BINANCE_API_KEY=
BINANCE_API_SECRET=
KRAKEN_API_KEY=
KRAKEN_API_SECRET=
COINBASE_API_KEY=
COINBASE_API_SECRET=

# ==========================================
# Payment Processing (Optional)
# ==========================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@cryptoorchestrator.com

# ==========================================
# Mobile App Configuration
# ==========================================
MOBILE_API_BASE_URL=http://localhost:8000
MOBILE_WS_BASE_URL=ws://localhost:8000

# ==========================================
# Electron Configuration
# ==========================================
ELECTRON_AUTO_UPDATER_ENABLED=false
ELECTRON_UPDATE_SERVER_URL=

# ==========================================
# Feature Flags
# ==========================================
ENABLE_ML_PREDICTIONS=true
ENABLE_ARBITRAGE=true
ENABLE_COPY_TRADING=true
ENABLE_STAKING=true
ENABLE_WALLET=true

# ==========================================
# Testing (Optional - for test environments)
# ==========================================
TEST_DATABASE_URL=sqlite+aiosqlite:///file:pytest_shared?mode=memory&cache=shared
TEST_JWT_SECRET=test-secret-key-for-testing-only

# ==========================================
# Blockchain RPC URLs (Optional - for DEX trading)
# ==========================================
ETHEREUM_RPC_URL=
BASE_RPC_URL=
ARBITRUM_RPC_URL=
POLYGON_RPC_URL=
OPTIMISM_RPC_URL=
AVALANCHE_RPC_URL=
BNB_CHAIN_RPC_URL=

# ==========================================
# DEX Aggregator Configuration (Optional)
# ==========================================
# 0x API key (optional, public endpoints work without key but are rate-limited)
ZEROX_API_KEY=
# OKX DEX aggregator (optional)
OKX_API_KEY=
# Rubic aggregator (optional)
RUBIC_API_KEY=

# ==========================================
# Accounting System OAuth (Optional)
# ==========================================
# Token encryption key for accounting OAuth credentials (32-byte base64)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ACCOUNTING_ENCRYPTION_KEY=

# QuickBooks Online OAuth
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_REDIRECT_URI=http://localhost:8000/api/tax/accounting/callback/quickbooks
QUICKBOOKS_ENVIRONMENT=sandbox  # sandbox or production

# Xero OAuth
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=
XERO_REDIRECT_URI=http://localhost:8000/api/tax/accounting/callback/xero

# ==========================================
# Backup Configuration (Optional)
# ==========================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4
BACKUP_RETENTION_MONTHS=12
