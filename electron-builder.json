{
  "appId": "com.cryptoorchestrator.app",
  "productName": "CryptoOrchestrator",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraFiles": [
    {
      "from": "server_fastapi/**/*",
      "to": "server_fastapi/",
      "filter": ["**/*"]
    },
    {
      "from": "shared/**/*",
      "to": "shared/",
      "filter": ["**/*"]
    },
    {
      "from": "requirements.txt",
      "to": "requirements.txt"
    }
  ],
  "extraResources": [
    {
      "from": "python-runtime/",
      "to": "python-runtime/",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.finance",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.inherit.plist",
    "identity": null,
    "signIgnore": [
      "python-runtime/**/*"
    ],
    "notarize": {
      "teamId": "${APPLE_TEAM_ID}"
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "signingHashAlgorithms": ["sha256"],
    "sign": "${WIN_CERT_PATH}",
    "certificateFile": "${WIN_CERT_FILE}",
    "certificatePassword": "${WIN_CERT_PASSWORD}",
    "signAndEditExecutable": true,
    "verifyUpdateCodeSignature": true,
    "publisherName": "CryptoOrchestrator, Inc."
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "category": "Finance",
    "vendor": "CryptoOrchestrator",
    "maintainer": "support@cryptoorchestrator.com"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "CryptoOrchestrator",
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "installerHeaderIcon": "build/icon.ico",
    "include": "build/installer.nsh",
    "script": "build/installer.nsh"
  },
  "dmg": {
    "title": "CryptoOrchestrator ${version}",
    "icon": "build/icon.icns",
    "background": "build/dmg-background.png",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "publish": {
    "provider": "github",
    "owner": "${GITHUB_OWNER}",
    "repo": "${GITHUB_REPO}",
    "releaseType": "release",
    "private": false,
    "token": "${GITHUB_TOKEN}"
  },
  "afterSign": "scripts/notarize.js",
  "afterPack": "scripts/after-pack.js"
}
