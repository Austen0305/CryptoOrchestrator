# Flake8 Configuration for Crypto-Orchestrator
[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    ENV,
    build,
    dist,
    *.egg-info,
    node_modules,
    alembic/versions,
    server_fastapi/__pycache__,
    tests/__pycache__
per-file-ignores =
    __init__.py:F401
    alembic/versions/*:E501
    tests/*:C901
max-complexity = 10
max-errors = 100
select = E, W, F, C, N

