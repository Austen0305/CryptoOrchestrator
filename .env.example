# Environment Configuration Template
# Copy this file to .env and fill in your values

# ===================
# Application Settings
# ===================
NODE_ENV=development
PORT=8000

# ===================
# Database Configuration
# ===================
DATABASE_URL=sqlite+aiosqlite:///./crypto_orchestrator.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/dbname
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db

# ===================
# Redis Configuration
# ===================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
ENABLE_CACHING=true

# ===================
# Celery Configuration
# ===================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ===================
# Performance Settings
# ===================
PERF_WORKERS=4
PERF_MAX_CONNECTIONS=1000
PERF_CACHE_TTL=300
PERF_DB_POOL_SIZE=20
PERF_RATE_LIMIT_PER_MINUTE=60

# ===================
# Monitoring & Logging
# ===================
LOG_LEVEL=INFO
PERF_ENABLE_PROMETHEUS=true
PERF_ENABLE_SENTRY=false
SENTRY_DSN=

# ===================
# Security
# ===================
JWT_SECRET=change-this-to-a-random-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ===================
# API Keys (Exchange)
# ===================
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

BINANCE_API_KEY=
BINANCE_API_SECRET=

COINBASE_API_KEY=
COINBASE_API_SECRET=

# ===================
# CORS Configuration
# ===================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===================
# Trading Configuration
# ===================
ENABLE_PAPER_TRADING=true
DEFAULT_RISK_LEVEL=medium
MAX_POSITION_SIZE=0.1

# ===================
# ML Configuration
# ===================
ML_TRAINING_EPOCHS=50
ML_BATCH_SIZE=32
ML_LOOKBACK_PERIOD=50

# ===================
# WebSocket Settings
# ===================
PERF_WS_PING_INTERVAL=20
PERF_WS_PING_TIMEOUT=10
PERF_WS_MAX_MESSAGE_SIZE=1048576
