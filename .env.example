# ==========================================
# CryptoOrchestrator Environment Variables
# ==========================================
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env TO GIT (it's in .gitignore)

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development
# Options: development, staging, production, test
PORT=8000
HOST=0.0.0.0
API_VERSION=1.0.0

# ==========================================
# Database Configuration
# ==========================================
# SQLite (Development - Default)
DATABASE_URL=sqlite+aiosqlite:///./data/crypto_orchestrator.db

# PostgreSQL (Production - Recommended)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cryptoorchestrator
# DB_POOL_SIZE=50
# DB_MAX_OVERFLOW=30
# DB_POOL_TIMEOUT=60
# DB_POOL_RECYCLE=3600

# Read Replicas (Optional - for high availability)
# DB_READ_REPLICA_URLS=postgresql+asyncpg://replica1:5432/cryptoorchestrator,postgresql+asyncpg://replica2:5432/cryptoorchestrator
# ENABLE_READ_REPLICAS=false

# ==========================================
# Security Secrets (REQUIRED IN PRODUCTION)
# ==========================================
# Generate secure secrets:
# Python: import secrets; print(secrets.token_urlsafe(64))
# Node: require('crypto').randomBytes(64).toString('base64')
JWT_SECRET=change-me-generate-64-byte-secret-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

EXCHANGE_KEY_ENCRYPTION_KEY=change-me-generate-32-byte-key-in-production

# ==========================================
# Redis Configuration (Optional but Recommended)
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
# REDIS_PASSWORD=  # Optional password for Redis

# ==========================================
# CORS Configuration
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=text
# Options: text, json

# ==========================================
# Trading Configuration
# ==========================================
DEFAULT_TRADING_MODE=paper
# Options: paper, real
ENABLE_MOCK_DATA=false
PRODUCTION_MODE=false
EXCHANGE_TIMEOUT=30
EXCHANGE_RETRY_ATTEMPTS=3

# ==========================================
# DEX Trading Configuration
# ==========================================
ENABLE_DEX_TRADING=true

# DEX Aggregator API Keys (At least one recommended)
# 0x Protocol (Recommended - Free tier available)
ZEROX_API_KEY=

# OKX DEX Aggregator (Optional)
OKX_API_KEY=
OKX_SECRET_KEY=
OKX_PASSPHRASE=

# Rubic DEX Aggregator (Optional)
RUBIC_API_KEY=

# Blockchain RPC URLs (Required for DEX trading)
# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# Base
BASE_RPC_URL=https://mainnet.base.org
# Arbitrum
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com
# Optimism
OPTIMISM_RPC_URL=https://mainnet.optimism.io
# Avalanche
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
# BNB Chain
BNB_CHAIN_RPC_URL=https://bsc-dataseed.binance.org

# ==========================================
# Payment Processing (Stripe)
# ==========================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ==========================================
# Email Configuration (Optional)
# ==========================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ==========================================
# SMS Notifications (Twilio - Optional)
# ==========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ==========================================
# Monitoring & Observability
# ==========================================
# Sentry Error Tracking (Optional)
SENTRY_DSN=
ENABLE_SENTRY=false

# Prometheus Metrics (Optional)
ENABLE_PROMETHEUS=true

# ==========================================
# Rate Limiting
# ==========================================
ENABLE_DISTRIBUTED_RATE_LIMIT=false
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# ==========================================
# Request Timeout
# ==========================================
REQUEST_TIMEOUT=30
# Per-request timeout in seconds

# ==========================================
# Middleware Configuration
# ==========================================
ENABLE_HEAVY_MIDDLEWARE=false
# Set to true to enable compression, caching, etc. in development

# ==========================================
# Web3/Wallet Configuration
# ==========================================
# WalletConnect Project ID (for Web3 wallet connections)
VITE_WALLETCONNECT_PROJECT_ID=

# ==========================================
# Feature Flags
# ==========================================
# Enable/disable specific features
ENABLE_ML_FEATURES=false
ENABLE_SOCIAL_FEATURES=true
ENABLE_MARKETPLACE=true

# ==========================================
# Testing Configuration
# ==========================================
TESTING=false
SKIP_ENV_VALIDATION=false

# ==========================================
# Development Only
# ==========================================
# These should NOT be set in production
# DEBUG=true
# RELOAD=true
