# ==========================================
# Crypto-Orchestrator Environment Variables
# ==========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# To use: Rename this file to .env.example

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# ==========================================
# Database Configuration
# ==========================================
# SQLite (Development - default)
DATABASE_URL=sqlite+aiosqlite:///./data/crypto_orchestrator.db

# PostgreSQL (Production - uncomment to use)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/cryptoorchestrator

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Test Database (for pytest)
TEST_DATABASE_URL=sqlite+aiosqlite:///file:pytest_shared?mode=memory&cache=shared

# ==========================================
# Redis Configuration (Optional but Recommended)
# ==========================================
# Required for distributed rate limiting, caching, and WebSocket pub/sub
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# ==========================================
# Security & Authentication
# ==========================================
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Key Encryption (for exchange credentials)
EXCHANGE_KEY_ENCRYPTION_KEY=your_32_character_encryption_key_change_this
API_KEY_SECRET=your_api_key_encryption_secret

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
TRUSTED_HOSTS=localhost,127.0.0.1

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100
RATE_LIMIT_STORAGE=redis

# ==========================================
# Circuit Breaker Configuration
# ==========================================
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
CIRCUIT_BREAKER_RESET_TIMEOUT=300

# ==========================================
# Caching Configuration
# ==========================================
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
CACHE_WARMING_THRESHOLD=0.8
ENABLE_CACHE_WARMING=true

# ==========================================
# Exchange API Keys
# ==========================================
# Add your exchange API credentials here
# IMPORTANT: These are encrypted at rest using EXCHANGE_KEY_ENCRYPTION_KEY

# Kraken
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_SECRET_KEY=your_kraken_secret_key

# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=false

# Coinbase
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_API_SECRET=your_coinbase_api_secret
COINBASE_PASSPHRASE=your_coinbase_passphrase
COINBASE_SANDBOX=false

# KuCoin
KUCOIN_API_KEY=your_kucoin_api_key
KUCOIN_API_SECRET=your_kucoin_api_secret
KUCOIN_PASSPHRASE=your_kucoin_passphrase
KUCOIN_SANDBOX=false

# Bybit
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret
BYBIT_TESTNET=false

# ==========================================
# WebSocket Configuration
# ==========================================
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=10
WS_MAX_MESSAGE_SIZE=1048576

# ==========================================
# Trading Configuration
# ==========================================
# Arbitrage Settings
ARBITRAGE_MIN_PROFIT_PERCENT=0.5
ARBITRAGE_MAX_POSITION_SIZE=10000
ARBITRAGE_SCAN_INTERVAL=5

# Backtesting Configuration
BACKTEST_MAX_SIMULATIONS=10000
BACKTEST_CACHE_RESULTS=true

# Paper Trading (Default Mode)
PAPER_TRADING_INITIAL_BALANCE=10000
PAPER_TRADING_ENABLED=true

# ==========================================
# Machine Learning Configuration
# ==========================================
# TensorFlow
TF_ENABLE_GPU=false
TF_MEMORY_GROWTH=true

# Model Storage
ML_MODEL_DIR=./models
ML_MODEL_CACHE_SIZE=10

# ==========================================
# Monitoring & Observability
# ==========================================
# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_FILE=logs/fastapi.log

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry Error Tracking (Optional)
SENTRY_DSN=
ENABLE_SENTRY=false

# ==========================================
# Email & SMS Notifications (Optional)
# ==========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@cryptoorchestrator.com
SMTP_USE_TLS=true

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ==========================================
# Payment Integration (Stripe)
# ==========================================
# Stripe API Keys
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Configuration
STRIPE_CURRENCY=usd
STRIPE_WEBHOOK_ENABLED=true

# ==========================================
# License System
# ==========================================
# License Validation
LICENSE_VALIDATION_URL=https://api.cryptoorchestrator.com/license/validate
LICENSE_VALIDATION_ENABLED=true
LICENSE_OFFLINE_GRACE_DAYS=7

# License Key Encryption
LICENSE_ENCRYPTION_KEY=your_license_encryption_key_32_chars

# ==========================================
# Mobile Push Notifications (Optional)
# ==========================================
# Firebase Cloud Messaging (Android)
FCM_SERVER_KEY=
FCM_PROJECT_ID=

# Apple Push Notification Service (iOS)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=./certs/apns_key.p8
APNS_BUNDLE_ID=com.cryptoorchestrator.app

# ==========================================
# Performance Settings
# ==========================================
# Server Workers
WORKERS=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
REQUEST_TIMEOUT=30

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0

# ==========================================
# Electron Desktop App Configuration
# ==========================================
# Auto-updater
ELECTRON_AUTO_UPDATER_ENABLED=true
ELECTRON_UPDATE_SERVER=https://updates.cryptoorchestrator.com
ELECTRON_PUBLISHER_NAME="Crypto-Orchestrator"

# ==========================================
# Development/Testing
# ==========================================
# Enable debug mode (DO NOT use in production)
DEBUG=false
ENABLE_DEBUG_ROUTES=false

# Test Mode (for integration tests)
TEST_MODE=false

# ==========================================
# Third-Party Integrations
# ==========================================
# Alpha Vantage (for sentiment/news - optional)
ALPHA_VANTAGE_API_KEY=

# NewsAPI (for sentiment analysis - optional)
NEWS_API_KEY=

# OpenAI (for AI Copilot features - optional)
OPENAI_API_KEY=

# ==========================================
# Production Deployment
# ==========================================
# SSL/TLS (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false

# Static Files
STATIC_FILES_DIR=./static
MAX_UPLOAD_SIZE=10485760

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600

